<Defs>

	<ThingDef ParentName="BaseFilth">
		<defName>Filth_NaturalBeer</defName>
		<label>Spilled Natural Beer</label>
		<description>A spilled dose of natural beer.</description>
		<thingClass>LiquidFuel</thingClass>
		<useHitPoints>true</useHitPoints>
		<tickerType>Normal</tickerType>
		<statBases>
			<Beauty>-10</Beauty>
			<Cleanliness>-15</Cleanliness>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>5.0</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Filth/LiquidFuel</texPath>
			<color>(179, 101, 48, 180)</color>
		</graphicData>
		<filth>
			<disappearsInDays>35~40</disappearsInDays>
			<rainWashes>true</rainWashes>
			<cleaningWorkToReduceThickness>70</cleaningWorkToReduceThickness>
			<canFilthAttach>true</canFilthAttach>
			<cleaningSound>Interact_CleanFilth_Fluid</cleaningSound>
		</filth>
  </ThingDef>
  
</Defs>